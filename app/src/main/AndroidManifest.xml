<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_logo_background"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_logo_background"
        android:supportsRtl="true"
        android:theme="@style/Theme.Valut"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".ui.DetailImageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailVideoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailMusicActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SelectAudioDeviceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MediaSelectActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MediaActivity"
            android:exported="false" />
        <activity android:name=".ui.webviewnews.news.NewActivity" />
        <activity android:name=".ui.chargecoin.ChargeCoinActivity" />
    </application>

</manifest>